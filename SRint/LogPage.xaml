<Page x:Class="SRint.LogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
    Title="LogPage">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            
            <TextBlock Name="loggerTextBlock" Grid.Row="1" Grid.ColumnSpan="1" HorizontalAlignment="Stretch" ScrollViewer.CanContentScroll="True">SRint v0.0.1-devel C# edition</TextBlock>
            <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left">Address:</Label>
            <TextBox Name="addressTextBox"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" Text="0.0.0.0"/>
            <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Send" Click="Button_Click"></Button>
        </Grid>
</Page>
