<Window x:Class="SRint.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="0" Grid.Column="0">IP address</Label>
        <TextBox Name="ipAddress" Grid.Row="0" Grid.Column="1">0.0.0.0</TextBox>
        <Label Grid.Row="1" Grid.Column="0">port</Label>
        <TextBox Name="port" Grid.Row="1" Grid.Column="1">5555</TextBox>
        
        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="Ok" Click="Button_Click" IsDefault="True"></Button>
    </Grid>
</Window>
