            <TextBlock Name="consoleTextBlock"></TextBlock>
        </ScrollViewer>
        <TextBox Name="inputText"  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Stretch" Text="" KeyDown="inputText_KeyDown"/>
